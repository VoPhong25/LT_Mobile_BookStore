<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/bg_layout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:gravity="center"
            >

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView_shopping"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/shopping3" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="27sp"
                android:text="Shop Now"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="2"
                android:columnCount="2"
                android:background="@drawable/customebackgrund"
                android:backgroundTint="#7ACEF4"
                android:padding="0dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center">

                <!--history cardview-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/history_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/bg_card"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="20dp"
                    android:layout_marginEnd="5dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="101dp"
                            android:layout_gravity="center"
                            android:src="@drawable/history_image" />

                        <TextView
                            android:id="@+id/tv_history_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="History"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/text_cards_color"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Novel CardView -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/novel_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/bg_card"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/novel_image"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/tv_novel_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Novel"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/text_cards_color"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Thrillers CardView -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/thrillers_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/bg_card"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/thrillers_image"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/tv_thrillers_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thrillers"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/text_cards_color"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Self-Help CardView -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/self_help_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/bg_card"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/self_help_image"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/tv_self_help_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Self-Help"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/text_cards_color"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>